# Philosophical Research RAG MCP Server Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://philosopher:password@localhost:5432/phil_rag
DATABASE_TEST_URL=postgresql+asyncpg://philosopher:password@localhost:5433/phil_rag_test

# Google Cloud / Vertex AI Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
VERTEX_AI_MODEL_NAME=textembedding-gecko@003

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
CACHE_TTL_DAYS=30

# MCP Server Configuration
MCP_SERVER_PORT=8000
LOG_LEVEL=INFO

# Performance Configuration
MAX_BATCH_SIZE=50
MAX_CONCURRENT_REQUESTS=100
SEARCH_TIMEOUT_MS=5000

# Security
ALLOWED_ORIGINS=*
ENABLE_CORS=true

# Optional External Services
ZOTERO_API_KEY=your-zotero-api-key
ZOTERO_USER_ID=your-zotero-user-id